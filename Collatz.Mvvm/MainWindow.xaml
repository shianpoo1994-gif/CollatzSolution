<Window x:Class="Collatz.Mvvm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Collatz-Vermutung – Analyzer (WPF)"
        Width="820" Height="450"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Startende natürliche Zahl n eingeben (dezimal, bis zu 1000 Stellen):"
                   FontSize="14"
                   Margin="0,0,0,8"/>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBox MaxLength="1000"
                     FontFamily="Consolas"
                     FontSize="14"
                     Padding="6"
                     Text="{Binding StartText, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}">
                <TextBox.ToolTip>
                    <ToolTip>
                        <TextBlock Text="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource AncestorType=TextBox}}"/>
                    </ToolTip>
                </TextBox.ToolTip>
            </TextBox>

            <TextBlock Foreground="Tomato" Margin="0,6,0,0">
                <TextBlock.Text>
                    <Binding Path="(Validation.Errors)[0].ErrorContent"
                             RelativeSource="{RelativeSource PreviousData}"/>
                </TextBlock.Text>
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,10">
            <Button Content="Berechnen" Width="120" Margin="0,0,10,0"
                    Command="{Binding ComputeCommand}"/>
            <Button Content="Abbrechen" Width="120"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>

        <GroupBox Grid.Row="3" Header="Ergebnisse" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,12,10"
                           Text="Anzahl der 3k+1-Operationen (Anzahl ungerader Elemente, ohne 1):"/>
                <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"
                         IsReadOnly="True" TextWrapping="Wrap" BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Consolas"
                         Text="{Binding OddOps,Mode=OneWay}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,12,10"
                           Text="Anzahl der k/2-Operationen (Anzahl gerader Elemente):"/>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"
                         IsReadOnly="True" TextWrapping="Wrap" BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Consolas"
                         Text="{Binding EvenOps,Mode=OneWay}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,12,10"
                           Text="Maximales Element:"/>
                <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"
                         IsReadOnly="True" TextWrapping="Wrap" BorderThickness="0"
                         Background="Transparent"
                         FontFamily="Consolas"
                         Text="{Binding MaxValue,Mode=OneWay}"/>

               
            </Grid>
        </GroupBox>

    </Grid>
</Window>